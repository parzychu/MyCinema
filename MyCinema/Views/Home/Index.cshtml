@using System.Web.Services.Description
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/dist/style.css")
    @Styles.Render("~/Content/font-awesome/css/font-awesome.min.css")

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://unpkg.com/buefy/lib/buefy.min.css">
    <script src="https://unpkg.com/buefy"></script>
</head>
<body>

    <div id="app">

        <my-navbar></my-navbar>
        <div class="container">
            <router-view></router-view>
        </div>
        <footer class="footer">
            <div class="container">
                &copy; @DateTime.Now.Year - My ASP.NET Application
            </div>
        </footer>
    </div>

    @if (Settings.UseWebpackDevServer)
    {
        <link href="@(Settings.WebpackDevServerRoot)/vendor.css" rel="stylesheet">
        <link href="@(Settings.WebpackDevServerRoot)/app.css" rel="stylesheet">
        <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/polyfills.js"></script>
        <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/vendor.js"></script>
        <script type="text/javascript" src="@(Settings.WebpackDevServerRoot)/app.js"></script>
    }
    else
    {
        @Scripts.Render("~/node_modules/vue/dist/vue.min.js")
        @Scripts.Render("~/node_modules/axios/dist/axios.min.js")
        @Scripts.Render("~/dist/bundle.js")
        @Scripts.Render("~/bundles/jquery")
    }



</body>
</html>
